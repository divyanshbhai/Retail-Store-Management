<% layout("/boilerplate/index") %>
<body>
    <a href="/order/add" class="btn btn-outline-primary">New Order</a>
    <div style="margin: 20px;">
        <table id="table" class="table table-bordered table-striped">
            <thead class="table-primary">
                <th>Order Id</th>
                <th>Customer Name</th>
                <th>Contact</th>
                <th>Date</th>
                <th>Amount</th>
                <th>Status</th>
                <th></th>
            </thead>
            <tbody>

                <% function formatDate(dateString) {
                    const date = new Date(dateString);
                    const day = date.getDate();
                    const monthNames = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
                    const monthIndex = date.getMonth();
                    const year = date.getFullYear();
                    return `${day}-${monthNames[monthIndex]}-${year}`;
                } %>


                <% for(order of orders) {%>
                    <tr>
                        <td><%= order._id %></td>
                        <td><%= order.customerName %></td>
                        <td><%= order.customerContact %></td>
                        <td><%= formatDate(order.orderDate) %></td>
                        <td>â‚¹<%= order.totalAmount %></td>
                        <td><%= order.status %></td>
                        <td><a href="/order/<%= order._id %>" class="btn btn-outline-info"><i class="bi bi-eye"></i><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                            <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8M1.173 8a13 13 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5s3.879 1.168 5.168 2.457A13 13 0 0 1 14.828 8q-.086.13-.195.288c-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5s-3.879-1.168-5.168-2.457A13 13 0 0 1 1.172 8z"/>
                            <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5M4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0"/>
                          </svg></a></td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</body>