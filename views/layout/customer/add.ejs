<% layout("/boilerplate/index") %>
<body>
    <div style="margin: 0 50px;">
    <form action="/customer" method="post">
        <label for="name" class="form-lable">Customer Name</label>
        <input type="text" name="customer[name]" class="form-control" id="name" placeholder="Customer Name" required>
        <label for="contact" class="form-lable">Contact</label>
        <input type="number" name="customer[contact]" class="form-control" id="contact" placeholder="Contact" required>
        <label for="address" class="form-lable">Address</label>
        <input type="text" name="customer[address]" class="form-control" id="address" placeholder="Address" required>
        <br>
        <button type="submit" class="btn btn-primary">Add Customer</button>
    </form>
</div>
</body>